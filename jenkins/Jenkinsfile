pipeline{
        agent any
        stages{
            stage('Export DATABASE_URI'){
                steps{
                    sh "bash export DATABASE_URI"
                    sh "bash export CREATE_SCHEMA=false"
                }
            }
            stage('Install Apt'){
                steps{
                    sh "bash sudo apt update"
                    sh "bash sudo apt install python3-venv python3-pip python3 -y"
                }
            }
            stage('Create Python Venv'){
                steps{
                   sh "bash python3 -m venv venv" 
                }
            }
            stage('Activate venv'){
                steps{
                   sh "bash source venv/bin/activate" 
                }
            }
            stage('install pip requirements'){
                steps{
                   sh "bash pip3 install -r requirements.txt" 
                }
            }
            stage('Run pytest'){
                steps{
                   sh " bash python3 -m pytest --cov=application --cov-report term-missing --cov-report xml --junitxml=junit_report.xml" 
                }
            }
            stage('Create schema'){
                steps{
                   sh "bash python3 create.py" 
                }
            }   
        }
}
